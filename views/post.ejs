<%- include('partials/_header')-%>

<body>

 <%- include('partials/_navigation')-%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
           <h1><%=post.title %></h1>
            <span > <p class="post-meta">
        <%= new Date(post.dateCreated).toLocaleString('tr-TR', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric', 
          hour: '2-digit', 
          minute: '2-digit' 
        }) %>
      </p></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          
          

          <p><%=post.detail %></p>
            
          <a href="#">
            <img class="img-fluid" src="/img/post-sample-image.jpg" alt="">
          </a>
                <hr>
        <div style="display: flex; justify-content:space-between">
        <a href="/posts/edit/<%= post._id %>" style="background-color: chocolate;" class="btn btn-primary">Edit</a>
        <a href="/posts/<%=post._id %>?_method=DELETE" style="background-color: red;" class="btn btn-primary" onclick="return confirm('Are you sure')">Delete</a>
        </div>
              </div>
        </div>
      </div>
    </div>
  </article>
  

  <hr>

  <%- include('partials/_footer')-%>

  <!-- Bootstrap core JavaScript -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="/js/clean-blog.min.js"></script>

</body>

</html>
